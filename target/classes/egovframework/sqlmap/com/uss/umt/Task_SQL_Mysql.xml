    <insert id="staskTaskDAO.taskInsert">
        <![CDATA[
            INSERT INTO TB_TASKLIST 
                   (   T_NM,
                       T_SDATE,          
                       T_EDATE,
                       T_SEQ
                       )
             VALUES (
                     #tNm#,
                     #tSdate#,
                     #tEdate#,
                     (SELECT IFNULL(MAX(T_SEQ*1),0)+1 FROM TB_TASKLIST A))
        ]]>
    </insert>
    
    <delete id="staskTaskDAO.taskDelete">
        <![CDATA[
            DELETE FROM TB_TASKLIST 
            WHERE T_SEQ=#tSeq#
        ]]>
    </delete>
    
    <select id="staskTaskDAO.taskSelectView" resultClass="taskVO">
